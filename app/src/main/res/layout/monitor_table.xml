<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:id="@+id/fillable_area">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="#31C3ED"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />



        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5EC4BC"
            android:fontFamily="sans-serif"
            android:text="MonitorApp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="normal|bold"
            tools:text="Select Monitor"
            tools:targetApi="jelly_bean"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="#6CA6CD"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.44"
            android:orientation="vertical"
            android:weightSum="1"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/fillable_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                tools:ignore="DuplicateIds,UselessParent">

                <TableLayout
                    android:id="@+id/table_header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/fillable_area"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TableLayout
                            android:id="@+id/fixed_column"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <HorizontalScrollView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <TableLayout
                                android:id="@+id/scrollable_part"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent" />
                        </HorizontalScrollView>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.67"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="NestedWeights">

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#5EC4BC"
                android:onClick="TAgent"
                android:text="representative"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:textStyle="normal|bold"
                tools:ignore="ButtonStyle,HardcodedText,NestedWeights,SmallSp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#31C3ED"
                android:onClick="TCampaign"
                android:text="campaign"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:textStyle="normal|bold"
                tools:ignore="ButtonStyle,HardcodedText,SmallSp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#5EC4BC"
                android:onClick="TQueue"
                android:text="queue"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:textStyle="normal|bold"
                tools:ignore="ButtonStyle,HardcodedText,SmallSp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#31C3ED"
                android:onClick="TIVR"
                android:text="ivr_line"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:textStyle="normal|bold"
                tools:ignore="ButtonStyle,HardcodedText,SmallSp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.04"
            android:orientation="horizontal"
            tools:ignore="InefficientWeight,NestedWeights">

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#505B75"
                android:onClick="TtableViewer"
                android:text="view"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="normal|bold"
                tools:ignore="ButtonStyle,HardcodedText,NestedWeights" />

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#505B75"
                android:onClick="TtoExit"
                android:text="exit"
                android:textColor="#FFFFFF"
                android:textStyle="normal|bold"
                tools:ignore="ButtonStyle,HardcodedText" />

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5EC4BC"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

</LinearLayout>
